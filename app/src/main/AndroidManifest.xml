                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutMe"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bartosz.fiszki.MainActivity" />
        </activity>
        <activity android:name=".AddWord">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bartosz.fiszki.MainActivity" />
        </activity>
        <activity
            android:name=".EditCategories"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bartosz.fiszki.MainActivity" />
        </activity>
        <activity android:name=".EditWord">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bartosz.fiszki.MainActivity" />
        </activity>
        <activity
            android:name=".Settings"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bartosz.fiszki.MainActivity" />
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".BackupActivity"
            android:label="@string/title_activity_backup">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bartosz.fiszki.MainActivity" />

        </activity>
    </application>

